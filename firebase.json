{
    "hosting": {
        "public": "./build/es5-bundled/",
        "ignore": [
            "firebase.json"
        ],
        "rewrites": [{
                "source": "!/__/**",
                "destination": "/index.html"
            },
            {
                "source": "!{/bower_components,/src}/**",
                "destination": "/index.html"
            },
            {
                "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
                "destination": "/index.html"
            }
        ]
    }
}